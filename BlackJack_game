import random

def deal_card():
    """Return a random card from the deck."""
    cards = [2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10, 11]  # Including face cards and Ace
    return random.choice(cards)

def calculate_score(hand):
    """Calculate the score of a hand of cards."""
    if sum(hand) == 21 and len(hand) == 2:
        return 0  # Blackjack
    if 11 in hand and sum(hand) > 21:
        hand.remove(11)
        hand.append(1)
    return sum(hand)

def compare(player_score, dealer_score):
    if player_score == dealer_score:
        return "draw"
    elif dealer_score == 0:
        return "dealer_blackjack"
    elif player_score == 0:
        return "player_blackjack"
    elif player_score > 21:
        return "player_bust"
    elif dealer_score > 21:
        return "dealer_bust"
    elif player_score > dealer_score:
        return "player_win"
    else:
        return "dealer_win"

def play_blackjack():
    print("Welcome to Blackjack!")

    while True:
        try:
            balance = int(input("Enter your starting balance: $"))
            if balance > 0:
                break
            else:
                print("Balance must be a positive amount. Please enter again.")
        except ValueError:
            print("Invalid input. Please enter a valid number.")
    
    print(f"Your starting balance is ${balance}.\n")

    while balance > 0:
        print(f"Current balance: ${balance}")
        while True:
            try:
                bet = int(input("Place your bet: $"))
                if bet > 0 and bet <= balance:
                    break
                else:
                    print("Invalid bet amount. Please bet within your balance.")
            except ValueError:
                print("Invalid input. Please enter a valid number.")

        player_hand = [deal_card(), deal_card()]
        dealer_hand = [deal_card(), deal_card()]

        game_over = False
        while not game_over:
            player_score = calculate_score(player_hand)
            dealer_score = calculate_score(dealer_hand)
            print(f"Your hand: {player_hand}, current score: {player_score}")
            print(f"Dealer's first card: {dealer_hand[0]}")

            if player_score == 0 or dealer_score == 0 or player_score > 21:
                game_over = True
            else:
                action = input("Type 'hit' to get another card, 'stand' to hold your hand: ").lower()
                if action == 'hit':
                    player_hand.append(deal_card())
                else:
                    game_over = True

        while dealer_score != 0 and dealer_score < 17:
            dealer_hand.append(deal_card())
            dealer_score = calculate_score(dealer_hand)

        print(f"Your final hand: {player_hand}, final score: {player_score}")
        print(f"Dealer's final hand: {dealer_hand}, final score: {dealer_score}")

        result = compare(player_score, dealer_score)
        if result == "draw":
            print("It's a draw! Bet returned.")
        elif result == "dealer_blackjack":
            print("Dealer has Blackjack. You lose!")
            balance -= bet
        elif result == "player_blackjack":
            print("You have Blackjack! You win!")
            balance += bet * 1.5
        elif result == "player_bust":
            print("You went over 21. You lose!")
            balance -= bet
        elif result == "dealer_bust":
            print("Dealer went over 21. You win!")
            balance += bet
        elif result == "player_win":
            print("You have the higher score! You win!")
            balance += bet
        else:
            print("Dealer has the higher score. You lose!")
            balance -= bet

        if balance <= 0:
            print("You ran out of money. Game over!")
            break

if __name__ == "__main__":
    play_blackjack()
